<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SahamDetailActivity">
    <LinearLayout
        android:id="@+id/linLayLiveChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Data Grafik Hari ini"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardLiveChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <ImageButton
                android:id="@+id/imgBtnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/ic_baseline_refresh_24"/>
            <ProgressBar
                android:id="@+id/ivLoadingLive"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartLive"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnShowLiveChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Live Chart"
        android:backgroundTint="@color/teal_700"
        android:layout_margin="10dp"
        android:textColor="#fff"/>
    <LinearLayout
        android:id="@+id/linLayChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Data Grafik Saham 3 Tahun"
            android:layout_gravity="center_horizontal"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp">
            <ProgressBar
                android:id="@+id/ivLoading"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <Button
        android:id="@+id/btnShowChart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Chart"
        android:backgroundTint="@color/teal_700"
        android:layout_margin="10dp"
        android:textColor="#fff"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Dividend Yield"
        android:layout_gravity="center_horizontal"/>
    <ScrollView
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">
        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content">
            <TableLayout
                android:id="@+id/tableLayoutDividen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>