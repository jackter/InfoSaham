<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:height="38dp">
        <shape>
            <gradient
                android:startColor="@color/accent"
                android:endColor="@color/accent"
                />
            <corners
                android:radius="2dp"
                />
        </shape>
    </item>

    <item android:width="8dp" android:height="8dp"
        android:top="32dp" android:gravity="center_horizontal" android:left="8dp">
        <rotate android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="@color/accent"/>
            </shape>
        </rotate>
    </item>
</layer-list>